{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}